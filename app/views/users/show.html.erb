<div class="container">

  <div class="page-header">
    <div class="pull-right">
      <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-primary"%>
      <%= link_to 'Delete', @user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    </div>
    <h1>Details for <%= @user.fnln %></h1>
  </div>

  <dl class="dl-horizontal">
    <dt>Name:</dt>
    <dd><%= "#{@user.first_name} #{@user.middle_name} #{@user.last_name}" %></dd>
    <dt>Email:</dt>
    <dd><%= @user.email %></dd>
    <dt>About me:</dt>
    <dd><%= @user.about_me %></dd>
  </dl>

  <h2><%= @user.fnln %>'s reviews</h2>
  <% @user.reviews.each do |review| %>
    <%= link_to "#{review.restaurant.name}", restaurant_path(review.restaurant) %>
    <%= review.rating %>
    <%= review.body %>
  <% end %>

</div>
