<div class="container">

  <div class="page-header">
    <div class="pull-right">
      <%= link_to "New User", new_user_path, class: "btn btn-primary" %>
    </div>
    <h2>Hungry Hungry Users</h2>
  </div>

  <% @users.order('last_name ASC').all.each do |user| %>
    <dl class="dl-horizontal">
      <p>
        <dt> </dt>
        <dd><h4><%= link_to "#{user.first_name} #{user.last_name}", user_path(user)%></h4></dd>
        <dt>Email:</dt>
        <dd><%= user.email %></dd>
        <dt>About me:</dt>
        <dd><%= user.about_me %></dd>
      </p>
  <% end %>

</div>
