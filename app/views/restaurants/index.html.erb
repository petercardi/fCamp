<div class="container">

  <div class="page-header">
    <div class="pull-right">
      <%= link_to "Add Restaurant", new_restaurant_path, class: "btn btn-info" %>
    </div>
    <h1>Restaurants</h1>
  </div>

  <% @restaurants.each do |restaurant| %>
    <%= link_to "#{restaurant.name}", restaurant_path(restaurant) %><br>
    <%= restaurant.phone_number %><br>
    <%= restaurant.hours %><br>
    <%= restaurant.website %><br>
    <%= restaurant.description %><br><hr>
    <% end %>

</div>
