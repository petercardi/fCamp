<!DOCTYPE html>
<html>
<head>
  <title>fgCamp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>

  <nav class="navbar navbar-custom">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">
          fCamp
        </a>
      </div>

      <ul class="nav navbar-nav navbar-custom navbar-right">
        <% if current_user %>
          <li>
            <%= link_to "#{current_user.first_name} #{current_user.last_name}", current_user %>
          </li>
          <li>
            <%= link_to "Sign Out", sign_out_path %>
          </li>
        <% else %>
          <li>
            <%= link_to "Sign Up", sign_up_path %>
          </li>
          <li>
            <%= link_to "Sign In", sign_in_path %>
          </li>
        <% end %>
      </ul>
    </div>
</nav>

<!-- stick your flash notice container here  -->

  <%= yield %>

  <div class="container">
    <footer>
      <hr>
      <%= link_to 'About', about_path %> |
      <%= link_to 'Users', users_path %> |
      <%= link_to 'Restaurants', restaurants_path %> |
      <%= link_to 'Reviews', reviews_path %>
    </footer>
  </div>

</body>
</html>
