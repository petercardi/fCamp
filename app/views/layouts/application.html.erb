<!DOCTYPE html>
<html>
<head>
  <title>fgCamp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body class="<%= 'homepage' if current_page?'/' %>">

  <nav class="navbar navbar-custom">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">
          fCamp
        </a>
      </div>

      <ul class="nav navbar-nav navbar-custom navbar-right">
        <% if current_user %>
          <li>
            <%= link_to "#{current_user.first_name} #{current_user.last_name}", current_user %>
          </li>
          <li>
            <%= link_to "Sign Out", sign_out_path %>
          </li>
        <% else %>
          <li>
            <%= link_to "Sign Up", sign_up_path %>
          </li>
          <li>
            <%= link_to "Sign In", sign_in_path %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>

<!-- stick your flash notice container here  -->

  <%= yield %>

  <div class="container">
    <footer>
      <hr>
      <div class="btn-toolbar pad-bottom-20 div-center" role="toolbar" aria-label="...">

        <div class="btn-group btn-group-lg" role="group" aria-label="...">
          <%= link_to 'About', about_path, class: "btn btn-default semi-opaque" %></button>
          <%= link_to 'Terms', terms_path, class: "btn btn-default semi-opaque" %></button>
          <%= link_to 'FAQ', faq_path, class: "btn btn-default semi-opaque" %></button>
        </div>

        <div class="btn-group btn-group-lg" role="group" aria-label="...">
          <%= link_to 'Users', users_path, class: "btn btn-default semi-opaque" %>
          <%= link_to 'Restaurants', restaurants_path, class: "btn btn-default semi-opaque" %>
          <%= link_to 'Reviews', reviews_path, class: "btn btn-default semi-opaque" %>
          <%= link_to 'Quotes', quotes_path, class: "btn btn-default semi-opaque" %>
        </div>

      </div>
      <!-- <%= link_to 'About', about_path, class: "btn btn-default semi-opaque" %>


       -->
    </footer>
  </div>

</body>
</html>
